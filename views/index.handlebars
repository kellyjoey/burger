<div class="jumbotron">
  <h1>Eat-Da-Burger!</h1>
</div>


  <h2>Add a Burger</h2>
    <form class="create-update-form" action="/" method="POST">
      <div class="form-group">
        <label for="burg">Burger Name:</label>
        <input type="text" id="burg" name="name">
      </div>
      <button type="submit">Add Burger</button>
    </form> 
    


<h2>Burgers to Eat!</h2>

<ul>
  
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour It!</button>
        </form>

      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers I've Eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

      </li>
    {{/if}}
  {{/each}}
</ul>

